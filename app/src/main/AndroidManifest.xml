<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mountzoft.login_demo_with_rich_animation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar.FullScreen">
        <activity
            android:name="com.mountzoft.login_demo_with_rich_animation.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mountzoft.login_demo_with_rich_animation.ForgotPassword"
            android:noHistory="true" />
        <activity
            android:name="com.mountzoft.login_demo_with_rich_animation.LoginSuccess"
            android:noHistory="true"/>
    </application>

</manifest>